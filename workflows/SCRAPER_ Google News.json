    {
      "parameters": {
        "jsCode": "// Article aus RSS Item + Query Info zusammenstellen — alle Items verarbeiten\nconst items = $input.all();\nconst allQueries = $('Fetch Enabled Queries').all();\n\nreturn items.map(item => {\n  const data = item.json;\n\n  // Query-Daten über pairedItem Index holen\n  const pairedIndex = item.pairedItem?.item ?? 0;\n  const queryData = allQueries[pairedIndex]?.json || {};\n\n  const title = data.title || 'Unbekannter Titel';\n  const link = data.link || '';\n  let pubDate = null;\n  if (data.pubDate) {\n    try {\n      pubDate = new Date(data.pubDate).toISOString();\n    } catch(e) {\n      pubDate = null;\n    }\n  }\n  const sourceName = data.source && data.source._ ? data.source._ : 'Google News';\n  const description = data.description || '';\n\n  // Content aus description extrahieren (HTML Tags entfernen)\n  let content = '';\n  if (typeof description === 'string') {\n    content = description.replace(/<[^>]+>/g, ' ').replace(/\\s+/g, ' ').trim();\n  }\n\n  return {\n    json: {\n      url: link,\n      title: title,\n      content: content,\n      source: sourceName,\n      source_type: 'google_news',\n      published_at: pubDate,\n      language: queryData.language || 'de',\n      category: queryData.category || 'general',\n      query_name: queryData.name,\n      query_id: queryData.id\n    }\n  };\n});"
      },
      "id": "f45b1bf3-3ae1-4bb6-b25c-e1aa574bf324",
      "name": "Format Article",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
        2464,
        480
      ]
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "UPDATE search_queries SET article_count = article_count + 1, last_fetched = NOW() WHERE id = $1",
        "options": {
