    {
      "parameters": {
        "jsCode": "// Article aus RSS Item + Query Info zusammenstellen\n// Query data comes from the current Loop batch (1 query per iteration)\nconst items = $input.all();\nconst queryData = $('Loop Queries').first()?.json || {};\nconst results = [];\n\nfor (const item of items) {\n  const data = item.json;\n  \n  const title = data.title || 'Unbekannter Titel';\n  const link = data.link || '';\n  const pubDate = data.pubDate ? new Date(data.pubDate).toISOString() : null;\n  const sourceName = data.source && data.source._ ? data.source._ : 'Google News';\n  const description = data.description || '';\n  \n  // Content aus description extrahieren (HTML Tags entfernen)\n  let content = description.replace(/<[^>]+>/g, ' ').replace(/\\s+/g, ' ').trim();\n  \n  results.push({\n    json: {\n      url: link,\n      title: title,\n      content: content,\n      source: sourceName,\n      source_type: 'google_news',\n      published_at: pubDate,\n      language: queryData.language || 'de',\n      category: queryData.category || 'general',\n      query_name: queryData.name,\n      query_id: queryData.id\n    }\n  });\n}\n\nreturn results;"
      },
      "id": "format-article",
      "name": "Format Article",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
        1680,
        96
      ]
    },
    {
      "parameters": {
        "jsCode": "// Collect ALL articles from Format Article across all loop iterations\nconst items = $('Format Article').all();\nconst articles = [];\n\nfor (const item of items) {\n  const articleData = item.json;\n  if (articleData && articleData.url) {\n    articles.push({\n      json: {\n        url: articleData.url,\n        title: articleData.title,\n        content: articleData.content,\n        source: articleData.source,\n        source_type: articleData.source_type,\n        published_at: articleData.published_at,\n        language: articleData.language,\n        category: articleData.category,\n        query_name: articleData.query_name,\n        query_id: articleData.query_id\n      }\n    });\n  }\n}\n\nif (articles.length === 0) {\n  return [{ json: { _empty: true, message: 'No articles from Google News' } }];\n}\n\nreturn articles;"
      },
      "id": "return-articles",
      "name": "Return Articles",
